{
    "name": "bishopm/churchnet",
    "type": "library",
    "description": "Resource site and Connexion API",
    "keywords": [
        "church",
        "database"
    ],
    "homepage": "https://github.com/bishopm/churchnet",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Bishop",
            "email": "support@bishop.net.za",
            "homepage": "https://github.com/bishopm",
            "role": "Developer"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "6.*",
        "tymon/jwt-auth": "1.*",
        "barryvdh/laravel-cors": "0.11.*",
        "cornford/googlmapper": "2.*",
        "laravelcollective/html": "5.6.*",
        "laravel/passport": "5.*",
        "cartalyst/tags": "6.*"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",        
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Bishopm\\Churchnet\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "bishopm\\churchnet\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "post-package-update": [
            "php artisan migrate"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
